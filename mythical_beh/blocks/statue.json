{
  "format_version": "1.16.0",
  "minecraft:block":{
    "description": {
      "identifier": "kesamasi:statue",
      "properties": {
        "block:facing_direction": [2, 3, 4, 5]
      }
    },
    "components": {
      "minecraft:material_instances": {
				"*": {
					"texture": "goblin",
					"render_method": "blend"
				}
      },
      "minecraft:destroy_time": 7.5,
      "minecraft:geometry": "geometry.goblin",
      "minecraft:block_light_emission": 0.0,
      "minecraft:block_light_absorption": 0.0,
      "minecraft:on_player_placing": {
        "event": "change_direction",
        "target": "self"
      },
      "minecraft:pick_collision": {
        "origin": [-7.0, 0.0, -4.0],
        "size": [14, 16, 8]
      },
      "minecraft:entity_collision": {
        "origin": [-7.0, 0.0, -4.0],
        "size": [14, 16, 8]
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('block:facing_direction') == 2",
        "components": {
          "minecraft:rotation": [ 0.0, 180.0, 0.0 ]
        }
      },
      {
        "condition": "query.block_property('block:facing_direction') == 3",
        "components": {
          "minecraft:rotation": [ 0.0, 0.0, 0.0 ]
        }
      },
      {
        "condition": "query.block_property('block:facing_direction') == 4",
        "components": {
          "minecraft:rotation": [ 0.0, 270.0, 0.0 ]
        }
      },
      {
        "condition": "query.block_property('block:facing_direction') == 5",
        "components": {
          "minecraft:rotation": [ 0.0, 90.0, 0.0 ]
        }
      }
    ],
    "events": {
      "change_direction": {
        "set_block_property": {
          "block:facing_direction": "(query.cardinal_facing_2d)"
        }
      }
    }
  }
}